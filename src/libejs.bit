/*
    libejs.bit -- Bit File for the Ejs library
 */

Bit.load({

    targets: {
        libejs: {
            type: 'lib',
            headers: [ 'slots/*.h', '*.h' ], 
            sources: [ 
                'compiler/*.c',
                'core/src/*.c',
                'vm/*.c'
            ],
            depends: [ 'libmpr', 'libpcre', 'libhttp', 'slots' ],
        },

        'clean-slots': {
            type: 'clean',
            action: "rm('${INC}/*.slots.h')",
        }
	},
})
