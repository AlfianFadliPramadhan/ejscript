/*
    ssl.bit - SSL package for Bit
 */

if (bit.packs.openssl && bit.packs.openssl.enable) {
    Bit.load({packs: { ssl: { path: bit.packs.openssl.path, description: 'SSL/TLS Security Library'}}})
} else if (bit.packs.matrixssl && bit.packs.matrixssl.enable) {
    Bit.load({packs: { ssl: { path: bit.packs.matrixssl.path, description: 'SSL/TLS Security Library'}}})
} else {
    throw 'No SSL provider defined'
}
