/*
    pmaker.bit - PackageMaker on macosx for Bit
 */

if (bit.platform.os == 'macosx') {
    let search = ['/Applications', '/Developer/Applications/Utilities' ]
    let pmaker = probe('PackageMaker.app', {fullpath: true, search: search})
    Bit.load({packs: {pmaker: {path: pmaker.join('Contents/MacOS/PackageMaker')}}})
}


