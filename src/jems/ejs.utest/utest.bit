/*
    utest.bit -- Bit File for ejs.utest
 */

Bit.load({

    targets: {
        'utest.es': {
            path: '${BIN}/utest.es',
            files: [ 'utest.es' ],
            build: "
                trace('Export', bit.target.files)
                cp('utest.es', bit.dir.bin)
            ",
            'generate-nmake': 'copy utest.es "${WIN_BIN}"',
            'generate-sh': 'cp utest.es ${BIN}',
        },

        'utest.worker': {
            path: '${BIN}/utest.worker',
            files: [ 'utest.worker' ],
            build: "
                trace('Export', bit.target.files)
                cp('utest.worker', bit.dir.bin)
            ",
            'generate-nmake': 'copy utest.worker "${WIN_BIN}"',
            'generate-sh': 'cp utest.worker ${BIN}',
        },

        'utest.exe': {
            type: 'file',
            path: '${BIN}/utest${EXE}',
            files: [ '${BIN}/ejsrun${EXE}' ],
            depends: ['ejsrun'],
        },
	},
})
