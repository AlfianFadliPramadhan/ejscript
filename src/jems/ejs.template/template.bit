/*
    template.bit -- Bit File for ejs.template
 */

Bit.load({

    targets: {
        'ejs.template.mod': {
            path: '${LIB}/ejs.template.mod',
            files: [ 'TemplateParser.es' ],
            build: "
                trace('Compile', 'ejs.template.mod')
                run('${BIN}/ejsc --out ${LIB}/ejs.template.mod ${settings.esflags} --optimize 9 ' + 
                    Path('.').glob('TemplateParser.es').sort().join(' '))
            ",
            'generate-nmake': '"${WIN_BIN}\\ejsc" --out "${OUT}" ${settings.esflags} --optimize 9 "${HOME}/TemplateParser.es"',
            'generate-sh': '${BIN}/ejsc --out ${OUT} ${settings.esflags} --optimize 9 ${HOME}/TemplateParser.es',
            depends: [ 'ejsc', 'ejsmod', 'ejs.mod' ],
        },
	},
})
