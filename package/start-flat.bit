/*
    start.bit -- Start Bit File to build the combo Ejscript release
 */

Bit.load({
    settings: {
		product: 'ejs',
		title: 'Embedthis Ejscript',
        company: 'Embedthis',
		version: '2.0.0',
		buildNumber: 'B2',
    },

    targets: {
        libejs: {
            type: 'lib',
            sources: [ 'ejsLib.c', 'deps.c', 'pcre.c', 'sqlite3.c' ],
            headers: [ '*.h' ],
            '-compiler': [
                /* SQLite needs these */
                '-Wall',
                '-Wshorten-64-to-32',
            ],
        },
        ejs: {
            type: 'exe',
            sources: [ 'ejs.c' ],
            depends: [ 'libejs' ],
        },
        ejsc: {
            type: 'exe',
            sources: [ 'ejsc.c' ],
            depends: [ 'libejs' ],
        },
        prep: {
            type: 'configure',
            build: "
                rm('${SRC}/*.o')
                rm('${SRC}/bit.h')
            ",
        },
    },
    packs: {
        cgi: {
            enable: true,
            path: ".",
        },
        dir: {
            enable: true,
            path: ".",
        },
        esp: {
            enable: true,
            path: ".",
        },
        php: {
            enable: false,
        },
        sqlite: {
            enable: true,
        },
        ssl: {
            enable: false,
        },
        ejscript: {
            enable: false,
        },
    },
})
